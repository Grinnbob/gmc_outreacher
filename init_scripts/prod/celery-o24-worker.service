[Unit]
Description=o24 celery worker
After=network.target

[Service]
Type=forking
User=o24user
Group=o24user
Environment="PATH=/home/o24user/o24_prod/.venv/bin"
WorkingDirectory=/home/o24user/o24_prod
ExecStart=/bin/sh APP_ENV=Production -c '${CELERY_BIN} multi start ${CELERYD_NODES} \
  -A ${CELERY_APP} --pidfile=${CELERYD_PID_FILE} \
  --logfile=${CELERYD_LOG_FILE} --loglevel=${CELERYD_LOG_LEVEL} ${CELERYD_OPTS}'

ExecStop=/bin/sh APP_ENV=Production -c '${CELERY_BIN} multi stopwait ${CELERYD_NODES} \
  --pidfile=${CELERYD_PID_FILE}'

ExecReload=/bin/sh APP_ENV=Production -c '${CELERY_BIN} multi restart ${CELERYD_NODES} \
  -A ${CELERY_APP} --pidfile=${CELERYD_PID_FILE} \
  --logfile=${CELERYD_LOG_FILE} --loglevel=${CELERYD_LOG_LEVEL} ${CELERYD_OPTS}'

Restart=on-failure

[Install]
WantedBy=multi-user.target